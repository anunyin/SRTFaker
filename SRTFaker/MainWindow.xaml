<Window x:Class="SRTFaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="194" Width="168" WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button Content="Select File" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="119" Click="Button_Click" Margin="5,5,5,0"/>
        <TextBox x:Name="tbHours" HorizontalAlignment="Left" Width="40" Height="21" Margin="5,129,0,0" TextWrapping="Wrap" Text="00" VerticalAlignment="Top" MaxLength="2" MaxLines="1" TextAlignment="Center"/>
        <TextBox x:Name="tbMinutes" HorizontalAlignment="Left" Width="44" Height="21" Margin="55,129,0,0" TextWrapping="Wrap" Text="00" VerticalAlignment="Top" MaxLength="2" MaxLines="1" TextAlignment="Center"/>
        <TextBox x:Name="tbSeconds" HorizontalAlignment="Left" Width="40" Height="21" Margin="108,129,0,0" TextWrapping="Wrap" Text="00" VerticalAlignment="Top" MaxLength="2" MaxLines="1" TextAlignment="Center"/>
    </Grid>
</Window>
